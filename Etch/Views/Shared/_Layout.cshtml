<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Page Title -->
    <title>Etch | @ViewData["Title"]</title>

    <!-- Character Encoding validation -->
    <meta charset="utf-8" />
    <!-- Viewport Width -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Compatability -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- About Etch -->
    <meta name="description" content="A free study planner for students, teachers and lecturers designed to
                  put you in control of your study life. Making it easier than ever to manage online." />
    <!-- Search Engine Queries -->
    <meta name="keywords" content="Etch, study planner, study, planner, student, students, teacher, teachers,
                  lecturer, lecturers, online, website, application" />
    <!-- Index Website -->
    <meta name="robots" content="index, follow" />

    <!-- Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicons/favicon-16x16.png">
    <link rel="manifest" href="~/favicons/site.webmanifest">
    <link rel="mask-icon" href="~/favicons/safari-pinned-tab.svg" color="#0c2035">
    <meta name="msapplication-TileColor" content="#0c2035">
    <meta name="theme-color" content="#0c2035">

    <environment include="Development">
        <!-- Get Normalize CSS -->
        <link rel="stylesheet" href="~/assets/styles/normalize.min.css" />
        <!-- Get Master CSS -->
        <link rel="stylesheet" href="~/assets/styles/master.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/assets/styles/site.min.css" />
    </environment>
    @RenderSection("styles", required: false)
</head>

<body>
    <div class="background-theme" style="background: @await Component.InvokeAsync("Theme") !important"></div>
   
    <!-- Header -->
    <header>
        @await Html.PartialAsync("_HeaderPartial")
    </header>

    <!-- Page Content -->
    <main class="transition-4s">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <!-- Copyright Information -->
        <p class="copyright font-size-small">2018 &copy; <a asp-area="" asp-controller="Home" asp-action="Index" class="link">Etch</a>. All Rights Reserved.</p>
    </footer>

    <environment include="Development">
        <!-- Get JQuery -->
        <script src="~/assets/scripts/jquery-3.2.1.min.js"></script>
        <!-- Get Master JS -->
        <script src="~/assets/scripts/master.js"></script>
    </environment>
    <environment exclude="Development">
        <!-- Get Minified Site JS -->
        <script src="~/assets/scipts/site.min.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>