@model Etch.Models.AccountModels.ForgotPasswordModel
@{ ViewData["Title"] = "Forgot your password?"; }
@section styles {
    <!-- Get Form CSS -->
    <link rel="stylesheet" href="~/assets/styles/form.css" />
}

<div class="center padding-32px">
    <!-- Logo -->
    <a asp-area="" asp-controller="Home" asp-action="Index" class="margin-bottom logo transition-4s"><img src="~/assets/images/header/etch.png" alt="Logo" /></a>

    <!-- Forgot Password Form -->
    <form asp-action="ForgotPassword" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="messages"></div>

        <!-- Email Input -->
        <span asp-validation-for="Email" class="message"></span>
        <div class="margin-bottom">
            <input asp-for="Email" type="email" placeholder="@Html.DisplayNameFor(m => m.Email)*" class="transition-2s" required />
        </div>

        <!-- Buttons -->
        <button type="submit" class="button margin-bottom transition-2s">Reset Password</button>
        <a asp-area="" asp-controller="Account" asp-action="Login" class="button transition-2s">Return to Login</a>
    </form>
</div>